@model List<Web_Project.Models.TrainerDTO>

@{
    ViewData["Title"] = "Trainers";
}

<div class="mx-auto max-w-6xl px-4 py-8">
    <div class="flex flex-col gap-2 sm:flex-row sm:items-end sm:justify-between">
        <div>
            <h1 class="text-2xl font-semibold tracking-tight text-slate-900">Trainers</h1>
            <p class="mt-1 text-sm text-slate-600">Manage trainer profiles.</p>
        </div>

        <div class="flex flex-wrap gap-2">
            <a asp-controller="Admin" asp-action="CreateTrainer"
               class="inline-flex items-center justify-center rounded-xl bg-emerald-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500">
                + Create Trainer
            </a>

            <a asp-controller="Admin" asp-action="Index"
               class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-4 py-2 text-sm font-semibold text-slate-900 shadow-sm hover:bg-slate-50">
                Back
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
            <div class="mt-4 rounded-xl border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-800">
            @TempData["Success"]
            </div>
    }
    @if (TempData["Error"] != null)
    {
            <div class="mt-4 rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-800">
            @TempData["Error"]
            </div>
    }

    <div class="mt-6 rounded-2xl border border-slate-200 bg-white shadow-sm overflow-hidden">
        @if (Model == null || !Model.Any())
        {
                <div class="p-6 text-sm text-slate-700">No trainers found.</div>
        }
        else
        {
                <div class="overflow-x-auto">
                    <table class="min-w-full text-left text-sm">
                        <thead class="bg-slate-50 text-slate-700">
                            <tr>
                                <th class="px-5 py-3 font-semibold">Name</th>
                                <th class="px-5 py-3 font-semibold">Expertise</th>
                                <th class="px-5 py-3 font-semibold">Trainer ID</th>
                                <th class="px-5 py-3 font-semibold text-right">Actions</th>
                            </tr>
                        </thead>

                        <tbody class="divide-y divide-slate-200">
                        @foreach (var t in Model)
                        {
                                    <tr class="hover:bg-slate-50">
                                        <td class="px-5 py-3">
                                            <p class="font-semibold text-slate-900">@t.FirstName @t.LastName</p>
                                    @if (!string.IsNullOrWhiteSpace(t.Email))
                                    {
                                                    <p class="text-xs text-slate-500">@t.Email</p>
                                    }
                                        </td>

                                        <td class="px-5 py-3 text-slate-700">@t.ExpertiseAreas</td>
                                        <td class="px-5 py-3 text-slate-500">@t.TrainerID</td>

                                        <td class="px-5 py-3">
                                            <div class="flex justify-end gap-2">
                                                <a asp-controller="Admin" asp-action="TrainerDetails" asp-route-id="@t.TrainerID"
                                                   class="rounded-xl border border-slate-200 bg-white px-3 py-2 text-xs font-semibold text-slate-900 hover:bg-slate-50">
                                                            Details
                                                </a>

                                                <a asp-controller="Admin" asp-action="EditTrainer" asp-route-id="@t.TrainerID"
                                                   class="rounded-xl border border-slate-200 bg-white px-3 py-2 text-xs font-semibold text-slate-900 hover:bg-slate-50">
                                                    Edit
                                                </a>

                                                <form asp-controller="Admin" asp-action="DeleteTrainer" method="post"
                                                      onsubmit="return confirm('Delete this trainer?');">
                                            @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@t.TrainerID" />
                                                    <button type="submit"
                                                            class="rounded-xl border border-red-200 bg-white px-3 py-2 text-xs font-semibold text-red-700 hover:bg-red-50">
                                                        Delete
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                        }
                        </tbody>

                    </table>
                </div>
        }
    </div>
</div>
