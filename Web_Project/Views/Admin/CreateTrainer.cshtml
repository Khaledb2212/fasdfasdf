@model Web_Project.Models.TrainerDTO


@{
    ViewData["Title"] = "Create Trainer";
}

<div class="mx-auto max-w-4xl px-4 py-8">
    <div class="flex flex-col gap-2 sm:flex-row sm:items-end sm:justify-between">
        <div>
            <h1 class="text-2xl font-semibold tracking-tight text-slate-900">Create Trainer</h1>
            <p class="mt-1 text-sm text-slate-600">Create a new trainer login and profile.</p>
        </div>

        <a asp-controller="Admin" asp-action="Trainers"
           class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-4 py-2 text-sm font-semibold text-slate-900 shadow-sm hover:bg-slate-50">
            Back to Trainers
        </a>
    </div>

    <div class="mt-6 rounded-2xl border border-slate-200 bg-white shadow-sm overflow-hidden">
        <div class="border-b border-slate-200 bg-slate-50 px-6 py-4">
            <p class="text-sm font-semibold text-slate-900">Trainer Account Details</p>
            <p class="mt-1 text-xs text-slate-600">Fill in the information then submit.</p>
        </div>

        <form asp-action="CreateTrainer" method="post" class="px-6 py-6">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly"
                 class="mb-5 rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700"></div>

            <!-- Login -->
            <div class="mb-8">
                <h2 class="text-sm font-semibold text-slate-900">Login Credentials</h2>

                <div class="mt-4 grid gap-4 sm:grid-cols-2">
                    <div>
                        <label asp-for="Email" class="text-sm font-medium text-slate-700"></label>
                        <input asp-for="Email" type="email"
                               class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500"
                               placeholder="trainer@example.com" required />
                        <span asp-validation-for="Email" class="mt-1 block text-xs text-red-600"></span>
                    </div>

                    <div>
                        <label asp-for="Password" class="text-sm font-medium text-slate-700"></label>
                        <input asp-for="Password" type="password"
                               class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500"
                               placeholder="••••••••" required />
                        <span asp-validation-for="Password" class="mt-1 block text-xs text-red-600"></span>
                    </div>
                </div>
            </div>

            <!-- Personal -->
            <div class="mb-8">
                <h2 class="text-sm font-semibold text-slate-900">Personal Details</h2>

                <div class="mt-4 grid gap-4 sm:grid-cols-2">
                    <div>
                        <label asp-for="FirstName" class="text-sm font-medium text-slate-700"></label>
                        <input asp-for="FirstName"
                               class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500"
                               placeholder="First name" required />
                        <span asp-validation-for="FirstName" class="mt-1 block text-xs text-red-600"></span>
                    </div>

                    <div>
                        <label asp-for="LastName" class="text-sm font-medium text-slate-700"></label>
                        <input asp-for="LastName"
                               class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500"
                               placeholder="Last name" required />
                        <span asp-validation-for="LastName" class="mt-1 block text-xs text-red-600"></span>
                    </div>
                </div>

                <div class="mt-4">
                    <label asp-for="Phone" class="text-sm font-medium text-slate-700"></label>
                    <input asp-for="Phone"
                           class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500"
                           placeholder="+90 5xx xxx xx xx" />
                    <span asp-validation-for="Phone" class="mt-1 block text-xs text-red-600"></span>
                </div>
            </div>

            <!-- Trainer Profile -->
            <div class="mb-8">
                <h2 class="text-sm font-semibold text-slate-900">Trainer Profile</h2>

                <div class="mt-4">
                    <label asp-for="ExpertiseAreas" class="text-sm font-medium text-slate-700"></label>
                    <input asp-for="ExpertiseAreas"
                           class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500"
                           placeholder="e.g., Yoga, Boxing" required />
                    <span asp-validation-for="ExpertiseAreas" class="mt-1 block text-xs text-red-600"></span>
                </div>

                <div class="mt-4">
                    <label asp-for="Description" class="text-sm font-medium text-slate-700"></label>
                    <textarea asp-for="Description" rows="4"
                              class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500"
                              placeholder="Bio / description"></textarea>
                    <span asp-validation-for="Description" class="mt-1 block text-xs text-red-600"></span>
                </div>
            </div>

            <div class="flex flex-col-reverse gap-3 sm:flex-row sm:justify-end">
                <a asp-controller="Admin" asp-action="Trainers"
                   class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-5 py-3 text-sm font-semibold text-slate-900 shadow-sm hover:bg-slate-50">
                    Cancel
                </a>

                <button type="submit"
                        class="inline-flex items-center justify-center rounded-xl bg-emerald-600 px-6 py-3 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500">
                    Create Trainer
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
