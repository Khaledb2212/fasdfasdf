@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="mx-auto max-w-6xl px-4 py-8">
    <div class="flex flex-col gap-2 sm:flex-row sm:items-end sm:justify-between">
        <div>
            <h1 class="text-2xl font-semibold tracking-tight text-slate-900">Admin Dashboard</h1>
            <p class="mt-1 text-sm text-slate-600">Manage trainers, services, and more.</p>
        </div>

        <a asp-controller="Home" asp-action="Index"
           class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-4 py-2 text-sm font-semibold text-slate-900 shadow-sm hover:bg-slate-50">
            Back to Home
        </a>
    </div>

    <div class="mt-6 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        <!-- Trainers -->
        <a asp-controller="Admin" asp-action="Trainers"
           class="group rounded-2xl border border-slate-200 bg-white p-5 shadow-sm transition hover:bg-slate-50">
            <div class="flex items-start gap-4">
                <div class="rounded-2xl bg-emerald-50 p-3 text-emerald-700">
                    <!-- icon -->
                    <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
                        <circle cx="9" cy="7" r="4"/>
                        <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                    </svg>
                </div>
                <div>
                    <p class="text-sm font-semibold text-slate-900 group-hover:text-slate-950">Trainers</p>
                    <p class="mt-1 text-sm text-slate-600">List, create, edit, and delete trainers.</p>
                </div>
            </div>
        </a>

        <!-- Services (placeholder link you can implement later) -->
        <a asp-controller="Admin" asp-action="Services"
           class="group rounded-2xl border border-slate-200 bg-white p-5 shadow-sm transition hover:bg-slate-50">
            <div class="flex items-start gap-4">
                <div class="rounded-2xl bg-sky-50 p-3 text-sky-700">
                    <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M4 7h16"/>
                        <path d="M4 12h16"/>
                        <path d="M4 17h16"/>
                    </svg>
                </div>
                <div>
                    <p class="text-sm font-semibold text-slate-900">Services</p>
                    <p class="mt-1 text-sm text-slate-600">Manage service types (Yoga, PT, etc.).</p>
                    <p class="mt-2 text-xs text-slate-500">(Create this action later)</p>
                </div>
            </div>
        </a>

        <!-- Appointments (placeholder) -->
        <a asp-controller="Admin" asp-action="Appointments"
           class="group rounded-2xl border border-slate-200 bg-white p-5 shadow-sm transition hover:bg-slate-50">
            <div class="flex items-start gap-4">
                <div class="rounded-2xl bg-amber-50 p-3 text-amber-700">
                    <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="4" width="18" height="18" rx="2"/>
                        <path d="M16 2v4"/>
                        <path d="M8 2v4"/>
                        <path d="M3 10h18"/>
                    </svg>
                </div>
                <div>
                    <p class="text-sm font-semibold text-slate-900">Appointments</p>
                    <p class="mt-1 text-sm text-slate-600">Moderate/approve appointments.</p>
                    <p class="mt-2 text-xs text-slate-500">(Create this action later)</p>
                </div>
            </div>
        </a>
    </div>
</div>

