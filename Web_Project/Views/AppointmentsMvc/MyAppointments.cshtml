@model List<Web_Project.Controllers.MyAppointmentRowVm>

@{
    ViewData["Title"] = "My Appointments";
}

<div class="mx-auto max-w-6xl px-4 py-8">
    <!-- Header -->
    <div class="flex flex-col gap-2 sm:flex-row sm:items-end sm:justify-between">
        <div>
            <h1 class="text-2xl font-semibold tracking-tight text-slate-900">My Appointments</h1>
            <p class="mt-1 text-sm text-slate-600">Track your sessions and manage cancellations.</p>
        </div>

        <div class="flex flex-wrap gap-2">
            <a asp-action="Book"
               class="inline-flex items-center justify-center rounded-xl bg-emerald-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500">
                + New Booking
            </a>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
            <div class="mt-4 rounded-xl border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-800">
            @TempData["Success"]
            </div>
    }
    @if (TempData["Error"] != null)
    {
            <div class="mt-4 rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-800">
            @TempData["Error"]
            </div>
    }

    <!-- Content -->
    <div class="mt-6 rounded-2xl border border-slate-200 bg-white shadow-sm overflow-hidden">
        @if (Model != null && Model.Any())
        {
                <div class="overflow-x-auto">
                    <table class="min-w-full text-left text-sm">
                        <thead class="bg-slate-50 text-slate-700">
                            <tr>
                                <th class="px-5 py-3 font-semibold">Service</th>
                                <th class="px-5 py-3 font-semibold">Trainer</th>
                                <th class="px-5 py-3 font-semibold">Date</th>
                                <th class="px-5 py-3 font-semibold">Time</th>
                                <th class="px-5 py-3 font-semibold text-right">Action</th>
                            </tr>
                        </thead>

                        <tbody class="divide-y divide-slate-200">
                        @foreach (var item in Model.OrderBy(x => x.StartTime))
                        {
                                    <tr class="hover:bg-slate-50">
                                        <td class="px-5 py-3">
                                            <p class="font-semibold text-slate-900">@item.ServiceName</p>
                                            <p class="mt-0.5 text-xs text-slate-500">Appointment #@item.AppointmentID</p>
                                        </td>

                                        <td class="px-5 py-3 text-slate-700">
                                    @item.TrainerName
                                        </td>

                                        <td class="px-5 py-3 text-slate-700">
                                    @item.StartTime.ToString("yyyy-MM-dd")
                                        </td>

                                        <td class="px-5 py-3 text-slate-700">
                                            <span class="font-medium text-slate-900">@item.StartTime.ToString("HH:mm")</span>
                                            <span class="text-slate-400">–</span>
                                            <span class="font-medium text-slate-900">@item.EndTime.ToString("HH:mm")</span>
                                        </td>

                                        <td class="px-5 py-3">
                                            <div class="flex justify-end">
                                                <form asp-action="Cancel" method="post"
                                                      onsubmit="return confirm('Are you sure you want to cancel this appointment?');">
                                            @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@item.AppointmentID" />

                                                    <button type="submit"
                                                            class="inline-flex items-center justify-center rounded-xl border border-red-200 bg-white px-3 py-2 text-xs font-semibold text-red-700 hover:bg-red-50">
                                                        Cancel
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                        }
                        </tbody>
                    </table>
                </div>
        }
        else
        {
                <div class="p-10">
                    <div class="mx-auto max-w-xl rounded-2xl border border-dashed border-slate-200 bg-slate-50 p-10 text-center">
                        <div class="mx-auto mb-4 inline-flex h-12 w-12 items-center justify-center rounded-2xl bg-white text-slate-500 shadow-sm ring-1 ring-slate-200">
                            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                      d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75" />
                            </svg>
                        </div>

                        <p class="text-sm font-semibold text-slate-900">No appointments yet</p>
                        <p class="mt-1 text-sm text-slate-600">Book your first session to get started.</p>

                        <a asp-action="Book"
                           class="mt-6 inline-flex items-center justify-center rounded-xl bg-emerald-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500">
                            Book Now
                            <span class="ml-2" aria-hidden="true">→</span>
                        </a>
                    </div>
                </div>
        }
    </div>
</div>
